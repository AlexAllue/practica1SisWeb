		function hide_div(id){
			document.getElementById(id).style.display="none";
		}

		function show_div(id_to_search){
			hide_div("players");
			hide_div("teams");
			hide_div("games");
			div = document.getElementById(id_to_search).style.display="block";
		}

		 </script>
